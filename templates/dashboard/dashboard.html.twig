{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List of non persisted beneficiaries</h1>

    <div>
        <form action="{{ path('app_dashboard') }}" method="get">
            <label>
                <input type="text" name="q" placeholder="Rechercher un bénéficiaire...">
            </label>
            <button type="submit">Rechercher</button>
        </form>
    </div>

    <ul>
        {% for beneficiary in beneficiaries %}
            <li>
                <img src="{{ beneficiary.avatarUrl }}" alt="Avatar de {{ beneficiary.name }}" width="64" height="64"/>
                <span>{{ beneficiary.name }}</span>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
